<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.aloha.security.mapper.BoardMapper">

    <resultMap id="boardMap" type="com.aloha.security.dto.Board">
        <id property="no" column="no" />
        <result property="id" column="id" />
        <result property="title" column="title" />
        <result property="content" column="content" />
        <result property="userNo" column="user_no" />
        <result property="createdAt" column="created_at" />
        <result property="updatedAt" column="updated_at" />
        <!-- 1:1 aovld = association -->
        <association property="user" select="selectUser" column="user_no" javaType="com.aloha.security.dto.Users"></association>
    </resultMap>

    <select id="selectUser" resultType="com.aloha.security.dto.Users">
        SELECT *
        FROM user
        WHERE no = #{user_no}
    </select>

    <select id="list" resultMap="boardMap">
        SELECT *
        FROM board
        ORDER BY no DESC, created_at DESC
    </select>

    <select id="select" resultMap="boardMap">
        SELECT *
        FROM board
        WHERE no = #{no}
    </select>

    <select id="selectById" resultMap="boardMap">
        SELECT *
        FROM board
        WHERE id = #{id}
    </select>

    <insert id="insert">
        INSERT INTO board(id, title, user_no, content)
        VALUES (#{id}, #{title}, #{userNo}, #{content})
    </insert>

    <update id="update">
        UPDATE board
        <set>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="content != null and content != ''">
                content = #{content},
            </if>
        </set>
        WHERE no = #{no}
    </update>

    <update id="updateById">
        UPDATE board
        <set>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="content != null and content != ''">
                content = #{content},
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM board
        WHERE no = #{no}
    </delete>

    <delete id="deleteById">
        DELETE FROM board
        WHERE id = #{id}
    </delete>

</mapper>